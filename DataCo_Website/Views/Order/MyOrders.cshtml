@model IEnumerable<DataCo_Website.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-4">
    <h2 class="mb-4">Đơn hàng của tôi</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>Chưa có đơn hàng nào</h4>
            <p>Bạn chưa đặt đơn hàng nào.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                Bắt đầu mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                var totalAmount = order.OrderItems.Sum(oi => oi.Total ?? 0);
                var statusBadge = order.Status switch
                {
                    "PROCESSING" => "bg-warning",
                    "COMPLETE" => "bg-success",
                    "CANCELED" => "bg-danger",
                    _ => "bg-warning"
                };

                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Đơn hàng #@order.OrderId.ToString("D6")</strong>
                                <span class="badge @statusBadge ms-2">@order.Status</span>
                            </div>
                            <small class="text-muted">@order.OrderDate?.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h6 class="mb-3">Sản phẩm:</h6>
                                    @foreach (var item in order.OrderItems.Take(3))
                                    {
                                        <div class="d-flex align-items-center mb-2">
                                            @if (!string.IsNullOrEmpty(item.Product?.Image))
                                            {
                                                <img src="~/images/products/@item.Product.Image"
                                                     alt="@item.Product.ProductName"
                                                     class="img-thumbnail me-2"
                                                     style="width: 50px; height: 50px; object-fit: contain;">
                                            }
                                            else
                                            {
                                                <div class="img-thumbnail me-2 d-flex align-items-center justify-content-center"
                                                     style="width: 50px; height: 50px; background-color: #f8f9fa;">
                                                    <i class="bi bi-image text-muted"></i>
                                                </div>
                                            }
                                            <div class="flex-grow-1">
                                                <small>@item.Product?.ProductName</small>
                                                <small class="text-muted"> x @item.Quantity</small>
                                            </div>
                                        </div>
                                    }
                                    @if (order.OrderItems.Count > 3)
                                    {
                                        <small class="text-muted">... và @(order.OrderItems.Count - 3) sản phẩm khác</small>
                                    }
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <h5 class="text-primary mb-3">$@totalAmount.ToString("N2")</h5>

                                    @if (order.Shipping != null)
                                    {
                                        <p class="mb-2">
                                            <small><strong>Trạng thái giao hàng:</strong></small><br>
                                            <span class="badge @(order.Shipping.DeliveryStatus switch {
                                                "Waiting for Shipment" => "bg-info",
                                                "Late delivery" => "bg-danger",
                                                "Shipping on time" => "bg-success",
                                                "Advance shipping" => "bg-primary",
                                                "Cancel delivery" => "bg-secondary",
                                                _ => "bg-info"
                                            })">
                                                @order.Shipping.DeliveryStatus
                                            </span>
                                        </p>
                                        <p class="mb-2">
                                            <small><strong>Phương thức giao hàng:</strong> @order.Shipping.ShippingMode</small>
                                        </p>
                                    }

                                    <div class="mt-3">
                                        <a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Chi tiết
                                        </a>

                                        @if (order.Status == "PROCESSING" && order.Shipping?.DeliveryStatus == "Waiting for Shipment")
                                        {
                                            <button class="btn btn-sm btn-success" onclick="confirmDelivery(@order.OrderId)">
                                                <i class="bi bi-check-circle"></i> Đã nhận hàng
                                            </button>
                                            <button class="btn btn-sm btn-danger" onclick="cancelOrder(@order.OrderId)">
                                                <i class="bi bi-x-circle"></i> Hủy đơn
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="d-flex justify-content-center mt-4">
            <nav>
                <ul class="pagination">
                    @if (ViewBag.Page > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="Order" asp-action="MyOrders" asp-route-page="@(ViewBag.Page - 1)">« Trước</a>
                        </li>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                            <a class="page-link" asp-controller="Order" asp-action="MyOrders" asp-route-page="@i">@i</a>
                        </li>
                    }

                    @if (ViewBag.Page < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="Order" asp-action="MyOrders" asp-route-page="@(ViewBag.Page + 1)">Tiếp »</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

@section Scripts {
    <script>
        function confirmDelivery(orderId) {
            if (!confirm('Bạn xác nhận đã nhận được hàng?')) return;

            $.ajax({
                url: '@Url.Action("ConfirmDelivery", "Order")',
                type: 'POST',
                data: {
                    orderId: orderId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert(response.message + '\nTrạng thái giao hàng: ' + response.deliveryStatus);
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra');
                }
            });
        }

        function cancelOrder(orderId) {
            if (!confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')) return;

            $.ajax({
                url: '@Url.Action("CancelOrder", "Order")',
                type: 'POST',
                data: {
                    orderId: orderId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra');
                }
            });
        }
    </script>
}

<form id="antiforgery-form">
    @Html.AntiForgeryToken()
</form>