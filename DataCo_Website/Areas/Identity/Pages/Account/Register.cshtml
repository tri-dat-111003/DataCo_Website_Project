@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="text-center mb-0">
                    <i class="fas fa-user-plus"></i> Create New Account
                </h3>
            </div>
            <div class="card-body">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <!-- Account Information -->
                    <div class="mb-4">
                        <h5 class="text-primary border-bottom pb-2">
                            <i class="fas fa-key"></i> Account Information
                        </h5>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                   placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock"></i> Password <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.Password" class="form-control" type="password"
                                   autocomplete="new-password" placeholder="Enter password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-lock"></i> Confirm Password <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password"
                                   autocomplete="new-password" placeholder="Confirm password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Personal Information -->
                    <div class="mb-4 mt-4">
                        <h5 class="text-primary border-bottom pb-2">
                            <i class="fas fa-user"></i> Personal Information
                        </h5>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.FirstName" class="form-label">
                                <i class="fas fa-user"></i> First Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="John" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.LastName" class="form-label">
                                <i class="fas fa-user"></i> Last Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Doe" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Input.Segment" class="form-label">
                                <i class="fas fa-briefcase"></i> Segment <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Input.Segment" asp-items="Model.Segments" class="form-select">
                                <option value="">-- Select Segment --</option>
                            </select>
                            <span asp-validation-for="Input.Segment" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Location Information -->
                    <div class="mb-4 mt-4">
                        <h5 class="text-primary border-bottom pb-2">
                            <i class="fas fa-map-marker-alt"></i> Location Information
                        </h5>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Country" class="form-label">
                                <i class="fas fa-globe"></i> Country <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Input.Country" asp-items="Model.Countries"
                                    class="form-select" id="countrySelect">
                                <option value="">-- Select Country --</option>
                            </select>
                            <span asp-validation-for="Input.Country" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.State" class="form-label">
                                <i class="fas fa-map"></i> State <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Input.State" class="form-select" id="stateSelect" disabled>
                                <option value="">-- Select State --</option>
                            </select>
                            <span asp-validation-for="Input.State" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.City" class="form-label">
                                <i class="fas fa-city"></i> City <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Input.City" class="form-select" id="citySelect" disabled>
                                <option value="">-- Select City --</option>
                            </select>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.ZipcodeId" class="form-label">
                                <i class="fas fa-mail-bulk"></i> Zipcode <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Input.ZipcodeId" class="form-select" id="zipcodeSelect" name="Input.ZipcodeId">
                                <option value="">-- Select Zipcode --</option>
                            </select>
                            <span asp-validation-for="Input.ZipcodeId" class="text-danger"></span>
                        </div>

                    </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">
                        <i class="fas fa-user-plus"></i> Create Account
                    </button>
                </form>

                <div class="text-center mt-3">
                    <p class="mb-2">Already have an account?</p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary">
                        <i class="fas fa-sign-in-alt"></i> Sign in here
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Cascading dropdown logic
            $('#countrySelect').change(function() {
                var country = $(this).val();
                resetDependentDropdowns(['state', 'city', 'zipcode']);

                if (country) {
                    loadStates(country);
                }
            });

            $('#stateSelect').change(function() {
                var country = $('#countrySelect').val();
                var state = $(this).val();
                resetDependentDropdowns(['city', 'zipcode']);

                if (country && state) {
                    loadCities(country, state);
                }
            });

            $('#citySelect').change(function() {
                var country = $('#countrySelect').val();
                var state = $('#stateSelect').val();
                var city = $(this).val();
                resetDependentDropdowns(['zipcode']);

                if (country && state && city) {
                    loadZipcodes(country, state, city);
                }
            });

            // Auto-fill location when zipcode selected
            $('#zipcodeSelect').change(function (e) {
                e.preventDefault(); // Ngăn form submit khi chọn zipcode
                //var zipcodeId = $(this).val();
                //if (zipcodeId) {
                //    autoFillLocation(zipcodeId);
                //}
            });


            function loadStates(country) {
                $.get('?handler=States', { country: country }, function(data) {
                    var stateSelect = $('#stateSelect');
                    stateSelect.empty();
                    stateSelect.append('<option value="">-- Select State --</option>');

                    $.each(data, function(i, state) {
                        stateSelect.append($('<option></option>').val(state).html(state));
                    });

                    stateSelect.prop('disabled', false);
                });
            }

            function loadCities(country, state) {
                $.get('?handler=Cities', { country: country, state: state }, function(data) {
                    var citySelect = $('#citySelect');
                    citySelect.empty();
                    citySelect.append('<option value="">-- Select City --</option>');

                    $.each(data, function(i, city) {
                        citySelect.append($('<option></option>').val(city).html(city));
                    });

                    citySelect.prop('disabled', false);
                });
            }

            function loadZipcodes(country, state, city) {
                $.get('?handler=Zipcodes', { country: country, state: state, city: city }, function(data) {
                    var zipcodeSelect = $('#zipcodeSelect');
                    zipcodeSelect.empty();
                    zipcodeSelect.append('<option value="">-- Select Zipcode --</option>');

                    $.each(data, function(i, zipcode) {
                        zipcodeSelect.append($('<option></option>')
                            .val(zipcode.value)
                            .html(zipcode.text));
                    });

                    zipcodeSelect.prop('disabled', false);
                });
            }

            function autoFillLocation(zipcodeId) {
                $.get('?handler=LocationByZipcode', { zipcodeId: zipcodeId }, function(data) {
                    if (data) {
                        $('#countrySelect').val(data.country).trigger('change');

                        setTimeout(function() {
                            $('#stateSelect').val(data.state).trigger('change');
                        }, 500);

                        setTimeout(function() {
                            $('#citySelect').val(data.city);
                        }, 1000);
                    }
                });
            }

            function resetDependentDropdowns(fields) {
                if (fields.includes('state')) {
                    $('#stateSelect').empty()
                        .append('<option value="">-- Select State --</option>')
                        .prop('disabled', true);
                }
                if (fields.includes('city')) {
                    $('#citySelect').empty()
                        .append('<option value="">-- Select City --</option>')
                        .prop('disabled', true);
                }
                if (fields.includes('zipcode')) {
                    $('#zipcodeSelect').empty()
                        .append('<option value="">-- Select Zipcode --</option>')
                        .prop('disabled', true);
                }
            }
        });
    </script>
}
