@model ShippingDashboardViewModel
@{
    ViewData["Title"] = "Shipping Dashboard - Analytics";
    var filters = ViewBag.Filters as ShippingFilters;
}

<style>
    .filter-panel {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 8px;
        padding: 1.5rem;
        color: white;
        margin-bottom: 1.5rem;
    }

        .filter-panel .form-label {
            color: white;
            font-weight: 500;
            margin-bottom: 8px;
        }

            .filter-panel .form-label i {
                margin-right: 5px;
            }

        .filter-panel .form-select {
            border: none;
            border-radius: 6px;
        }

        .filter-panel .btn-apply {
            background: white;
            color: #667eea;
            border: none;
            font-weight: 600;
        }

            .filter-panel .btn-apply:hover {
                background: #f8f9fa;
            }

        .filter-panel .btn-clear {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid white;
            font-weight: 600;
        }

            .filter-panel .btn-clear:hover {
                background: rgba(255, 255, 255, 0.3);
                color: white;
            }

        .filter-panel .btn-toggle {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 1px solid white;
            font-weight: 600;
        }

            .filter-panel .btn-toggle:hover {
                background: rgba(255, 255, 255, 0.3);
                color: white;
            }

    .metric-card {
        transition: transform 0.2s;
        border: none;
        border-radius: 10px;
    }

        .metric-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 16px rgba(0,0,0,0.2);
        }

    .chart-container {
        position: relative;
        height: 400px;
    }

    .chart-container-small {
        position: relative;
        height: 300px;
    }

    .select2-container--bootstrap-5 .select2-selection--multiple {
        min-height: 42px !important;
        border: 2px solid #dee2e6 !important;
        border-radius: 6px !important;
    }

        .select2-container--bootstrap-5 .select2-selection--multiple:focus-within {
            border-color: #667eea !important;
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25) !important;
        }

        .select2-container--bootstrap-5 .select2-selection--multiple .select2-selection__choice {
            background-color: #667eea !important;
            border: none !important;
            color: white !important;
            padding: 4px 10px !important;
            border-radius: 4px !important;
            margin: 3px !important;
        }

        .select2-container--bootstrap-5 .select2-selection--multiple .select2-selection__choice__remove {
            color: white !important;
            margin-right: 5px !important;
        }

            .select2-container--bootstrap-5 .select2-selection--multiple .select2-selection__choice__remove:hover {
                color: #ff6b6b !important;
            }
</style>

<div class="container-fluid">
    <!-- Filters Panel -->
    <div class="filter-panel">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h5 class="mb-1">
                    <i class="fas fa-truck"></i> Shipping Dashboard Filters
                </h5>
                <small>Lọc dữ liệu giao hàng theo năm, quý, trạng thái và phân khúc khách hàng</small>
            </div>
            <button class="btn btn-toggle btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#filtersPanel">
                <i class="fas fa-chevron-down"></i> Toggle
            </button>
        </div>

        <div class="collapse show" id="filtersPanel">
            <form method="get" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label"><i class="fas fa-calendar"></i> Year</label>
                        <select name="Years" class="form-select select2-multiple" multiple>
                            @if (ViewBag.AvailableYears != null && (ViewBag.AvailableYears as List<int>).Any())
                            {
                                @foreach (var year in ViewBag.AvailableYears as List<int>)
                                {
                                    <option value="@year" selected="@(filters?.Years?.Contains(year) == true)">
                                        @year
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-calendar-alt"></i> Quarter</label>
                        <select name="Quarters" class="form-select select2-multiple" multiple>
                            @if (ViewBag.AvailableQuarters != null)
                            {
                                @foreach (var quarter in ViewBag.AvailableQuarters as List<int>)
                                {
                                    <option value="@quarter" selected="@(filters?.Quarters?.Contains(quarter) == true)">
                                        Q@(quarter)
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label"><i class="fas fa-shipping-fast"></i> Delivery Status</label>
                        <select name="DeliveryStatus" class="form-select select2-multiple" multiple>
                            @if (ViewBag.AvailableDeliveryStatus != null)
                            {
                                @foreach (var status in ViewBag.AvailableDeliveryStatus as List<string>)
                                {
                                    <option value="@status" selected="@(filters?.DeliveryStatus?.Contains(status) == true)">
                                        @status
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-users"></i> Segment</label>
                        <select name="Segments" class="form-select select2-multiple" multiple>
                            @if (ViewBag.AvailableSegments != null)
                            {
                                @foreach (var segment in ViewBag.AvailableSegments as List<string>)
                                {
                                    <option value="@segment" selected="@(filters?.Segments?.Contains(segment) == true)">
                                        @segment
                                    </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-2 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-apply flex-fill">
                            <i class="fas fa-search"></i> Apply
                        </button>
                        <button type="button" class="btn btn-clear flex-fill" onclick="clearFilters()">
                            <i class="fas fa-times"></i> Clear
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Metrics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card metric-card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Shipments</h6>
                            <h2 class="mb-0">
                                @Model.TotalShipments.ToString("N0")
                            </h2>
                        </div>
                        <div>
                            <i class="fas fa-box fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card metric-card bg-info text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Avg Days Actual</h6>
                            <h2 class="mb-0">
                                @Model.AverageDaysActual.ToString("F1")
                            </h2>
                        </div>
                        <div>
                            <i class="fas fa-calendar-check fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card metric-card bg-success text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Avg Days Scheduled</h6>
                            <h2 class="mb-0">
                                @Model.AverageDaysScheduled.ToString("F1")
                            </h2>
                        </div>
                        <div>
                            <i class="fas fa-clock fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card metric-card bg-danger text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Late Delivery Rate</h6>
                            <h2 class="mb-0">
                                @Model.LateDeliveryRate.ToString("F1")%
                            </h2>
                        </div>
                        <div>
                            <i class="fas fa-exclamation-triangle fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 1: Delivery Status + Segment + Shipping Mode -->
    <div class="row mb-4">
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-shipping-fast"></i> Shipments by Delivery Status</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container-small">
                        <canvas id="deliveryStatusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-users"></i> Shipments by Segment</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container-small">
                        <canvas id="segmentChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-truck"></i> Shipments by Shipping Mode</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container-small">
                        <canvas id="shippingModeChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 2: Shipments by Year + Delivery Performance -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="fas fa-calendar"></i> Shipments by Year</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="yearChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-line"></i> Delivery Performance (Actual vs Scheduled)</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="performanceChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 3: Department -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-building"></i> Shipments by Department</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="departmentChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 4: Top 20 Categories -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-tags"></i> Top 20 Categories by Shipments</h5>
                </div>
                <div class="card-body">
                    <div style="position: relative; height: 600px;">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 5: Top 20 States -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <h5 class="mb-0"><i class="fas fa-map-marker-alt"></i> Top 20 States by Shipments</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="stateChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

    <script>
        // Initialize Select2
        $(document).ready(function() {
            $('.select2-multiple').select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: 'Select options...',
                allowClear: true
            });
        });

        // Clear filters
        function clearFilters() {
            $('.select2-multiple').val(null).trigger('change');
            $('#filterForm').submit();
        }

        // Data from server
        const shipmentsByDeliveryStatus = @Html.Raw(Json.Serialize(Model.ShipmentsByDeliveryStatus));
        const shipmentsByYear = @Html.Raw(Json.Serialize(Model.ShipmentsByYear));
        const shipmentsBySegment = @Html.Raw(Json.Serialize(Model.ShipmentsBySegment));
        const shipmentsByShippingMode = @Html.Raw(Json.Serialize(Model.ShipmentsByShippingMode));
        const deliveryPerformanceByYear = @Html.Raw(Json.Serialize(Model.DeliveryPerformanceByYear));
        const topCategoriesByShipments = @Html.Raw(Json.Serialize(Model.TopCategoriesByShipments));
        const topStatesByShipments = @Html.Raw(Json.Serialize(Model.TopStatesByShipments));
        const shipmentsByDepartment = @Html.Raw(Json.Serialize(Model.ShipmentsByDepartment));

        const formatNumber = (value) => {
            return new Intl.NumberFormat('en-US').format(value);
        };

        const formatCompact = (value) => {
            return new Intl.NumberFormat('en-US', {
                notation: 'compact',
                compactDisplay: 'short'
            }).format(value);
        };

        // Chart 1: Delivery Status (Doughnut)
        new Chart(document.getElementById('deliveryStatusChart'), {
            type: 'doughnut',
            data: {
                labels: shipmentsByDeliveryStatus.map(d => d.label),
                datasets: [{
                    data: shipmentsByDeliveryStatus.map(d => d.value),
                    backgroundColor: ['#28a745', '#ffc107', '#17a2b8', '#dc3545', '#6c757d', '#fd7e14', '#20c997', '#6f42c1']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { boxWidth: 12, font: { size: 10 } } },
                    tooltip: {
                        callbacks: {
                            label: (ctx) => {
                                const total = ctx.dataset.data.reduce((a, b) => a + b, 0);
                                const pct = ((ctx.parsed / total) * 100).toFixed(1);
                                return `${ctx.label}: ${formatNumber(ctx.parsed)} (${pct}%)`;
                            }
                        }
                    },
                    datalabels: {
                        color: '#fff',
                        font: { weight: 'bold', size: 11 },
                        formatter: (value, ctx) => {
                            const total = ctx.dataset.data.reduce((a, b) => a + b, 0);
                            const pct = ((value / total) * 100).toFixed(1);
                            return pct > 5 ? pct + '%' : '';
                        }
                    }
                }
            },
            plugins: [ChartDataLabels]
        });

        // Chart 2: Segment (Pie)
        new Chart(document.getElementById('segmentChart'), {
            type: 'pie',
            data: {
                labels: shipmentsBySegment.map(d => d.label),
                datasets: [{
                    data: shipmentsBySegment.map(d => d.value),
                    backgroundColor: ['#ff6384', '#36a2eb', '#ffcd56', '#4bc0c0']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: {
                        callbacks: {
                            label: (ctx) => {
                                const total = ctx.dataset.data.reduce((a, b) => a + b, 0);
                                const pct = ((ctx.parsed / total) * 100).toFixed(1);
                                return `${ctx.label}: ${formatNumber(ctx.parsed)} (${pct}%)`;
                            }
                        }
                    },
                    datalabels: {
                        color: '#fff',
                        font: { weight: 'bold', size: 14 },
                        formatter: (value, ctx) => {
                            const total = ctx.dataset.data.reduce((a, b) => a + b, 0);
                            const pct = ((value / total) * 100).toFixed(1);
                            return pct + '%';
                        }
                    }
                }
            },
            plugins: [ChartDataLabels]
        });

        // Chart 3: Shipping Mode (Doughnut)
        new Chart(document.getElementById('shippingModeChart'), {
            type: 'doughnut',
            data: {
                labels: shipmentsByShippingMode.map(d => d.label),
                datasets: [{
                    data: shipmentsByShippingMode.map(d => d.value),
                    backgroundColor: ['#17a2b8', '#28a745', '#ffc107', '#dc3545']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: {
                        callbacks: {
                            label: (ctx) => {
                                const total = ctx.dataset.data.reduce((a, b) => a + b, 0);
                                const pct = ((ctx.parsed / total) * 100).toFixed(1);
                                return `${ctx.label}: ${formatNumber(ctx.parsed)} (${pct}%)`;
                            }
                        }
                    },
                    datalabels: {
                        color: '#fff',
                        font: { weight: 'bold', size: 14 },
                        formatter: (value, ctx) => {
                            const total = ctx.dataset.data.reduce((a, b) => a + b, 0);
                            const pct = ((value / total) * 100).toFixed(1);
                            return pct + '%';
                        }
                    }
                }
            },
            plugins: [ChartDataLabels]
        });

        // Chart 4: Shipments by Year (Bar)
        new Chart(document.getElementById('yearChart'), {
            type: 'bar',
            data: {
                labels: shipmentsByYear.map(d => d.year),
                datasets: [{
                    label: 'Shipment Count',
                    data: shipmentsByYear.map(d => d.shipmentCount),
                    backgroundColor: '#ffc107',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: { callbacks: { label: (ctx) => `Count: ${formatNumber(ctx.parsed.y)}` } },
                    datalabels: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { callback: (value) => formatCompact(value) }
                    }
                }
            }
        });

        // Chart 5: Delivery Performance (Line)
        new Chart(document.getElementById('performanceChart'), {
            type: 'line',
            data: {
                labels: deliveryPerformanceByYear.map(d => d.year),
                datasets: [
                    {
                        label: 'Days Actual',
                        data: deliveryPerformanceByYear.map(d => d.daysActual),
                        borderColor: '#dc3545',
                        backgroundColor: 'rgba(220, 53, 69, 0.2)',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Days Scheduled',
                        data: deliveryPerformanceByYear.map(d => d.daysScheduled),
                        borderColor: '#28a745',
                        backgroundColor: 'rgba(40, 167, 69, 0.2)',
                        fill: true,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: { callbacks: { label: (ctx) => `${ctx.dataset.label}: ${ctx.parsed.y.toFixed(1)} days` } },
                    datalabels: { display: false }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Chart 6: Department (Horizontal Bar)
        new Chart(document.getElementById('departmentChart'), {
            type: 'bar',
            data: {
                labels: shipmentsByDepartment.map(d => d.label),
                datasets: [{
                    label: 'Shipments',
                    data: shipmentsByDepartment.map(d => d.value),
                    backgroundColor: '#6c757d',
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: { callbacks: { label: (ctx) => `Count: ${formatNumber(ctx.parsed.x)}` } },
                    datalabels: { display: false }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: { callback: (value) => formatCompact(value) }
                    }
                }
            }
        });

        // Chart 7: Top Categories (Horizontal Bar)
        new Chart(document.getElementById('categoryChart'), {
            type: 'bar',
            data: {
                labels: topCategoriesByShipments.map(d => d.label),
                datasets: [{
                    label: 'Shipments',
                    data: topCategoriesByShipments.map(d => d.value),
                    backgroundColor: '#343a40',
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: { callbacks: { label: (ctx) => `Count: ${formatNumber(ctx.parsed.x)}` } },
                    datalabels: { display: false }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: { callback: (value) => formatCompact(value) }
                    }
                }
            }
        });

        // Chart 8: Top States (Horizontal Bar)
        new Chart(document.getElementById('stateChart'), {
            type: 'bar',
            data: {
                labels: topStatesByShipments.map(d => d.label),
                datasets: [{
                    label: 'Shipments',
                    data: topStatesByShipments.map(d => d.value),
                    backgroundColor: 'rgba(102, 126, 234, 0.8)',
                    borderColor: 'rgba(102, 126, 234, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: { callbacks: { label: (ctx) => `Count: ${formatNumber(ctx.parsed.x)}` } },
                    datalabels: { display: false }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: { callback: (value) => formatCompact(value) }
                    }
                }
            }
        });
    </script>
}