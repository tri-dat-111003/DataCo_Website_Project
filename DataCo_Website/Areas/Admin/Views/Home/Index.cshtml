@using System.Globalization
@{
    ViewData["Title"] = "Admin Home";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="welcome-card">
                <div class="welcome-content">
                    <h1 class="welcome-title">
                        <i class="fas fa-chart-line"></i> Welcome to Admin Panel
                    </h1>
                    <p class="welcome-subtitle">
                        Chào mừng bạn đến với hệ thống quản trị DataCo
                    </p>
                    <div class="welcome-time">
                        <i class="far fa-clock"></i> @DateTime.Now.ToString("dddd, MMMM dd, yyyy - hh:mm tt", CultureInfo.GetCultureInfo("en-US"))
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon bg-primary">
                    <i class="fas fa-users fa-3x"></i>
                </div>
                <h4>Quản Lý Users</h4>
                <p>Quản lý tài khoản người dùng, phân quyền và bảo mật</p>
                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-primary">
                    Truy cập <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon bg-warning">
                    <i class="fas fa-box fa-3x"></i>
                </div>
                <h4>Quản Lý Sản Phẩm</h4>
                <p>Thêm, sửa, xóa sản phẩm và quản lý kho hàng</p>
                <a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-warning">
                    Truy cập <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon bg-secondary">
                    <i class="fas fa-tags fa-3x"></i>
                </div>
                <h4>Quản Lý Danh Mục</h4>
                <p>Quản lý danh mục và phân loại sản phẩm</p>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary">
                    Truy cập <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon bg-danger">
                    <i class="fas fa-building fa-3x"></i>
                </div>
                <h4>Quản Lý Phòng Ban</h4>
                <p>Quản lý các phòng ban và tổ chức</p>
                <a asp-area="Admin" asp-controller="Departments" asp-action="Index" class="btn btn-danger">
                    Truy cập <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon bg-success">
                    <i class="fas fa-shopping-cart fa-3x"></i>
                </div>
                <h4>Quản Lý Đơn Hàng</h4>
                <p>Theo dõi và xử lý đơn hàng của khách hàng</p>
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-success">
                    Truy cập <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon bg-info">
                    <i class="fas fa-truck fa-3x"></i>
                </div>
                <h4>Quản Lý Giao Hàng</h4>
                <p>Theo dõi tình trạng vận chuyển và giao hàng</p>
                <a asp-area="Admin" asp-controller="Shippings" asp-action="Index" class="btn btn-info">
                    Truy cập <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="info-box">
                <h5><i class="fas fa-info-circle"></i> Thông Tin Hệ Thống</h5>
                <p class="mb-2">
                    <strong>Phiên bản:</strong> 1.0.0
                </p>
                <p class="mb-2">
                    <strong>Hệ thống:</strong> DataCo E-Commerce Management System
                </p>
                <p class="mb-0">
                    <strong>Tài khoản:</strong> @User.Identity?.Name
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .welcome-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        padding: 3rem 2rem;
        color: white;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        animation: fadeIn 0.6s ease;
    }

    .welcome-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    .welcome-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 1rem;
    }

    .welcome-time {
        font-size: 1rem;
        opacity: 0.8;
    }

    .feature-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

    .feature-icon {
        width: 100px;
        height: 100px;
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .feature-card h4 {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: #333;
    }

    .feature-card p {
        color: #666;
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .feature-card .btn {
        color: white;
        font-weight: 600;
        padding: 0.6rem 2rem;
        border-radius: 25px;
        transition: all 0.3s ease;
        border: none;
    }

        .feature-card .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .info-box {
        background: #f8f9fa;
        border-left: 4px solid #667eea;
        padding: 1.5rem;
        border-radius: 8px;
    }

        .info-box h5 {
            color: #667eea;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .info-box p {
            color: #666;
            margin-bottom: 0.5rem;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .welcome-title {
            font-size: 2rem;
        }

        .welcome-subtitle {
            font-size: 1rem;
        }

        .feature-icon {
            width: 80px;
            height: 80px;
        }

            .feature-icon i {
                font-size: 2rem !important;
            }
    }
</style>