@model IEnumerable<DataCo_Website.Models.Customer>

@{
    ViewData["Title"] = "Quản Lý Khách Hàng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>
        <i class="fas fa-users"></i> Quản Lý Khách Hàng
    </h2>
    <!-- ❌ REMOVED: Nút thêm khách hàng -->
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 80px;">ID</th>
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Segment</th>
                        <th>Mã Bưu Điện</th>
                        <th style="width: 200px;" class="text-center">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CustomerId</td>
                                <td>@item.LastName</td>
                                <td>@item.FirstName</td>
                                <td>@item.Segment</td>
                                <td>@item.ZipcodeNavigation?.Zipcode</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.CustomerId"
                                           class="btn btn-sm btn-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.CustomerId"
                                           class="btn btn-sm btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.CustomerId"
                                           class="btn btn-sm btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <p>Chưa có khách hàng nào</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- PHÂN TRANG -->
@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page - 1)">Previous</a>
            </li>

            @{
                int start = Math.Max(1, ViewBag.Page - 2);
                int end = Math.Min(ViewBag.TotalPages, ViewBag.Page + 2);

                if (start > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="1">1</a>
                    </li>
                    if (start > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }

                if (end < ViewBag.TotalPages)
                {
                    if (end < ViewBag.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                    </li>
                }
            }

            <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.Page + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

<div class="mt-3">
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        <strong>Lưu ý:</strong> Khách hàng được tạo tự động khi đăng ký tài khoản trên website.
    </div>
</div>