@model DataCo_Website.Models.Department

@{
    ViewData["Title"] = "Chỉnh Sửa Phòng Ban";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="DepartmentId" />

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-hashtag"></i> ID Phòng Ban
                            </label>
                            <input type="text" class="form-control" value="#@Model.DepartmentId" disabled readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="DepartmentName" class="form-label">
                                <i class="fas fa-building"></i> Tên Phòng Ban <span class="text-danger">*</span>
                            </label>
                            <input asp-for="DepartmentName" class="form-control" placeholder="Nhập tên phòng ban..." />
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AddressLine" class="form-label">
                                <i class="fas fa-map-marker-alt"></i> Địa Chỉ
                            </label>
                            <input asp-for="AddressLine" class="form-control" placeholder="Nhập địa chỉ phòng ban..." />
                            <span asp-validation-for="AddressLine" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Lưu Thay Đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
