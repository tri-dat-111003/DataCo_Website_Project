@model DataCo_Website.Models.Product
@{
    ViewData["Title"] = "Chỉnh Sửa Sản Phẩm";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách sản phẩm</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa #@Model.ProductId</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-box"></i> Thông Tin Sản Phẩm</h5>
                </div>
                <div class="card-body p-4">
                    <form id="editForm" asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="ProductId" />

                        <div class="row">
                            <!-- Left Column: Form Fields -->
                            <div class="col-md-7">
                                <!-- Product Name -->
                                <div class="mb-4">
                                    <label asp-for="ProductName" class="form-label fw-bold">
                                        <i class="fas fa-tag"></i> Tên Sản Phẩm <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="ProductName" class="form-control form-control-lg" placeholder="Nhập tên sản phẩm..." />
                                    <span asp-validation-for="ProductName" class="text-danger small"></span>
                                </div>

                                <!-- Category -->
                                <div class="mb-4">
                                    <label asp-for="CategoryId" class="form-label fw-bold">
                                        <i class="fas fa-list"></i> Danh Mục <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="ViewBag.CategoryId">
                                        <option value="">-- Chọn danh mục --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>

                                <!-- Product Price -->
                                <div class="mb-4">
                                    <label asp-for="ProductPrice" class="form-label fw-bold">
                                        <i class="fas fa-dollar-sign"></i> Giá Bán <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="ProductPrice" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="ProductPrice" class="text-danger small"></span>
                                </div>

                                <!-- Cost Price -->
                                <div class="mb-4">
                                    <label asp-for="Cost" class="form-label fw-bold">
                                        <i class="fas fa-coins"></i> Giá Vốn <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Cost" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="Cost" class="text-danger small"></span>
                                    <small class="text-muted d-block mt-1">
                                        <i class="fas fa-info-circle"></i> Chỉ ảnh hưởng đơn hàng mới, không cập nhật quá khứ
                                    </small>
                                </div>

                                <!-- Stock Quantity -->
                                <div class="mb-4">
                                    <label asp-for="Stock" class="form-label fw-bold">
                                        <i class="fas fa-boxes"></i> Số Lượng Tồn Kho <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text"><i class="fas fa-box"></i></span>
                                        <input asp-for="Stock" type="number" class="form-control" min="0" id="stockInput" />
                                    </div>
                                    <span asp-validation-for="Stock" class="text-danger small"></span>
                                    <small class="text-muted d-block mt-1">
                                        <i class="fas fa-info-circle"></i> Cập nhật số lượng sản phẩm hiện có trong kho
                                    </small>
                                    @if (Model.Stock <= 0)
                                    {
                                        <div class="alert alert-danger mt-2 mb-0">
                                            <i class="fas fa-exclamation-triangle"></i> <strong>Hết hàng!</strong> Sản phẩm sẽ không thể được thêm vào giỏ.
                                        </div>
                                    }
                                    else if (Model.Stock < 10)
                                    {
                                        <div class="alert alert-warning mt-2 mb-0">
                                            <i class="fas fa-exclamation-triangle"></i> <strong>Sắp hết hàng!</strong> Chỉ còn @Model.Stock sản phẩm.
                                        </div>
                                    }
                                </div>

                                <!-- IsActive Status -->
                                <div class="mb-4">
                                    <label asp-for="IsActive" class="form-label fw-bold">
                                        <i class="fas fa-toggle-on"></i> Trạng Thái
                                    </label>
                                    <div class="form-check form-switch">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="isActiveSwitch" style="width: 3em; height: 1.5em;">
                                        <label class="form-check-label ms-2" for="isActiveSwitch" id="statusLabel">
                                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                                @(Model.IsActive ? "Đang hoạt động" : "Đã vô hiệu hóa")
                                            </span>
                                        </label>
                                    </div>
                                    <small class="text-muted d-block mt-1">
                                        <i class="fas fa-info-circle"></i> Tắt để ẩn sản phẩm khỏi giao diện người dùng
                                    </small>
                                </div>

                                <!-- Description with Rich Text Editor -->
                                <div class="mb-4">
                                    <label asp-for="Description" class="form-label fw-bold">
                                        <i class="fas fa-align-left"></i> Mô Tả Sản Phẩm
                                    </label>
                                    <div id="editor" style="min-height: 200px; border: 1px solid #dee2e6; border-radius: 0.375rem;"></div>
                                    <textarea name="Description" id="descriptionInput" style="display: none;">@Html.Raw(Model.Description)</textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                    <small class="text-muted d-block mt-1">
                                        <i class="fas fa-info-circle"></i> Sử dụng thanh công cụ để format văn bản (tùy chọn)
                                    </small>
                                </div>

                                <!-- Profit Margin -->
                                @if (Model.ProductPrice.HasValue && Model.Cost.HasValue)
                                {
                                    var margin = ((Model.ProductPrice.Value - Model.Cost.Value) / Model.ProductPrice.Value) * 100;
                                    var badgeClass = margin > 30 ? "bg-success" : margin > 15 ? "bg-warning" : "bg-danger";

                                    <div class="alert alert-info">
                                        <i class="fas fa-chart-line"></i> <strong>Lợi nhuận ước tính:</strong>
                                        <span class="badge @badgeClass fs-6">@margin.ToString("F2")%</span>
                                    </div>
                                }
                            </div>

                            <!-- Right Column: Image Upload -->
                            <div class="col-md-5">
                                <!-- Current Image Display -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-image"></i> Hình Ảnh Hiện Tại
                                    </label>
                                    <div class="card border-2">
                                        <div class="card-body text-center p-3" style="background: #f8f9fa;">
                                            @if (!string.IsNullOrEmpty(Model.Image))
                                            {
                                                <img src="~/images/products/@Model.Image"
                                                     alt="@Model.ProductName"
                                                     id="currentImage"
                                                     class="img-fluid rounded shadow-sm"
                                                     style="max-height: 200px; width: 100%; object-fit: contain;">
                                            }
                                            else
                                            {
                                                <div class="py-4">
                                                    <i class="fas fa-image fa-3x text-muted"></i>
                                                    <p class="text-muted mt-2 mb-0">Chưa có hình ảnh</p>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Upload New Image -->
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-upload"></i> Thay Đổi Hình Ảnh
                                    </label>
                                    <div class="input-group">
                                        <input type="file"
                                               class="form-control"
                                               id="imageFile"
                                               name="imageFile"
                                               accept="image/*"
                                               onchange="previewImage(event)">
                                        <label class="input-group-text bg-warning text-dark" for="imageFile">
                                            <i class="fas fa-folder-open"></i> Chọn
                                        </label>
                                    </div>
                                    <small class="text-muted d-block mt-1">
                                        <i class="fas fa-info-circle"></i> Để trống nếu không muốn thay đổi | JPG, PNG, GIF | Max 5MB
                                    </small>
                                </div>

                                <!-- New Image Preview -->
                                <div id="newImagePreview" style="display: none;">
                                    <div class="card border-success border-2">
                                        <div class="card-header bg-success text-white py-2">
                                            <small><i class="fas fa-check-circle"></i> Hình ảnh mới (chưa lưu)</small>
                                        </div>
                                        <div class="card-body text-center p-3" style="background: #f8f9fa;">
                                            <img id="newPreview"
                                                 src="#"
                                                 alt="Preview"
                                                 class="img-fluid rounded shadow-sm"
                                                 style="max-height: 200px; width: 100%; object-fit: contain;">
                                            <button type="button"
                                                    class="btn btn-sm btn-danger mt-2"
                                                    onclick="clearNewImage()">
                                                <i class="fas fa-times"></i> Hủy thay đổi
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <hr class="my-4">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Hủy Bỏ
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-info btn-lg me-2">
                                    <i class="fas fa-eye"></i> Xem Chi Tiết
                                </a>
                                <button type="submit" class="btn btn-warning btn-lg text-dark">
                                    <i class="fas fa-save"></i> Lưu Thay Đổi
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Quill Editor -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <script>
        // Initialize Quill editor
        var quill = new Quill('#editor', {
            theme: 'snow',
            modules: {
                toolbar: [
                    [{ 'header': [1, 2, 3, false] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    [{ 'color': [] }, { 'background': [] }],
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    [{ 'align': [] }],
                    ['link'],
                    ['clean']
                ]
            },
            placeholder: 'Nhập mô tả sản phẩm...'
        });

        // Load existing description
        var descriptionTextarea = document.getElementById('descriptionInput');
        var existingDescription = descriptionTextarea.value;

        if (existingDescription && existingDescription.trim() !== '') {
            quill.root.innerHTML = existingDescription;
        }

        // Update textarea when form submits
        var form = document.getElementById('editForm');
        form.addEventListener('submit', function(e) {
            var htmlContent = quill.root.innerHTML;
            var textContent = quill.getText().trim();

            if (textContent.length === 0) {
                descriptionTextarea.value = '';
            } else {
                descriptionTextarea.value = htmlContent;
            }
        });

        // Update status label when switch changes
        document.getElementById('isActiveSwitch').addEventListener('change', function() {
            const label = document.getElementById('statusLabel');
            if (this.checked) {
                label.innerHTML = '<span class="badge bg-success">Đang hoạt động</span>';
            } else {
                label.innerHTML = '<span class="badge bg-secondary">Đã vô hiệu hóa</span>';
            }
        });

        // Stock input validation and warning
        document.getElementById('stockInput').addEventListener('input', function() {
            const value = parseInt(this.value);
            const alertContainer = this.closest('.mb-4').querySelector('.alert');

            // Remove existing alert
            if (alertContainer) {
                alertContainer.remove();
            }

            // Add new alert based on stock value
            if (value <= 0) {
                const alert = document.createElement('div');
                alert.className = 'alert alert-danger mt-2 mb-0';
                alert.innerHTML = '<i class="fas fa-exclamation-triangle"></i> <strong>Hết hàng!</strong> Sản phẩm sẽ không thể được thêm vào giỏ.';
                this.parentElement.parentElement.appendChild(alert);
            } else if (value < 10) {
                const alert = document.createElement('div');
                alert.className = 'alert alert-warning mt-2 mb-0';
                alert.innerHTML = `<i class="fas fa-exclamation-triangle"></i> <strong>Sắp hết hàng!</strong> Chỉ còn ${value} sản phẩm.`;
                this.parentElement.parentElement.appendChild(alert);
            }
        });
    </script>

    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (!file) {
                clearNewImage();
                return;
            }

            if (file.size > 5 * 1024 * 1024) {
                alert('⚠️ Kích thước file quá lớn! Vui lòng chọn file nhỏ hơn 5MB.');
                event.target.value = '';
                return;
            }

            const validTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/jpg'];
            if (!validTypes.includes(file.type)) {
                alert('⚠️ Định dạng file không hợp lệ! Chỉ chấp nhận: JPG, PNG, GIF');
                event.target.value = '';
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('newPreview').src = e.target.result;
                document.getElementById('newImagePreview').style.display = 'block';
            }
            reader.readAsDataURL(file);
        }

        function clearNewImage() {
            document.getElementById('imageFile').value = '';
            document.getElementById('newImagePreview').style.display = 'none';
            document.getElementById('newPreview').src = '#';
        }
    </script>

    <style>
        .card {
            border-radius: 10px;
            transition: transform 0.2s;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .form-control:focus, .form-select:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
        }

        .breadcrumb {
            background-color: #f8f9fa;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
        }

        #newImagePreview {
            animation: slideDown 0.3s ease-out;
        }

        .ql-editor {
            min-height: 200px;
        }

        @@keyframes slideDown {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .form-check-input:checked {
            background-color: #198754;
            border-color: #198754;
        }
    </style>
}