@model DataCo_Website.Models.Product
@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách sản phẩm</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết #@Model.ProductId</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-box"></i> Thông Tin Sản Phẩm
                        </h5>
                        <span class="badge bg-light text-dark">ID: @Model.ProductId</span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Left Column: Image -->
                        <div class="col-md-5 mb-4 mb-md-0">
                            <div class="sticky-top" style="top: 20px;">
                                <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
                                    <div class="card-body p-4 text-center">
                                        @if (!string.IsNullOrEmpty(Model.Image))
                                        {
                                            <div class="image-container mb-3" style="position: relative;">
                                                <img src="~/images/products/@Model.Image"
                                                     alt="@Model.ProductName"
                                                     id="productImage"
                                                     class="img-fluid rounded shadow-lg"
                                                     style="max-height: 400px; width: 100%; object-fit: contain; cursor: pointer;"
                                                     onclick="openImageModal(this.src)">
                                                <div class="position-absolute top-0 end-0 m-2">
                                                    <button class="btn btn-sm btn-light rounded-circle"
                                                            onclick="openImageModal(document.getElementById('productImage').src)"
                                                            title="Xem ảnh lớn">
                                                        <i class="fas fa-search-plus"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <p class="text-muted small mb-0">
                                                <i class="fas fa-file-image"></i> Hình ảnh sản phẩm
                                            </p>
                                        }
                                        else
                                        {
                                            <div class="py-5">
                                                <i class="fas fa-image fa-5x text-muted opacity-25"></i>
                                                <p class="text-muted mt-3 mb-0">Chưa có hình ảnh</p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column: Details -->
                        <div class="col-md-7">
                            <div class="product-details">
                                <!-- Product Name -->
                                <div class="mb-4">
                                    <h3 class="text-dark mb-1">@Model.ProductName</h3>
                                    <div class="d-flex align-items-center gap-2">
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> Đang hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-ban"></i> Đã vô hiệu hóa
                                            </span>
                                        }
                                        @if (Model.Category != null)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fas fa-folder"></i> @Model.Category.CategoryName
                                            </span>
                                        }
                                    </div>
                                </div>

                                <hr>

                                <!-- Price -->
                                <div class="mb-4 p-4 rounded" style="background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <small class="text-muted d-block mb-1">
                                                <i class="fas fa-money-bill-wave"></i> Giá bán
                                            </small>
                                            <h2 class="mb-0 text-success fw-bold">
                                                $@(Model.ProductPrice?.ToString("N2") ?? "0.00")
                                            </h2>
                                        </div>
                                        <div class="text-end">
                                            @if (Model.IsActive)
                                            {
                                                <span class="badge bg-success px-3 py-2">
                                                    <i class="fas fa-check-circle"></i> Còn hàng
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary px-3 py-2">
                                                    <i class="fas fa-ban"></i> Đã vô hiệu
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Detailed Information -->
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">
                                            <i class="fas fa-info-circle text-info"></i> Thông Tin Chi Tiết
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-borderless mb-0">
                                            <tbody>
                                                <tr>
                                                    <td class="text-muted" style="width: 40%;">
                                                        <i class="fas fa-hashtag"></i> Mã sản phẩm
                                                    </td>
                                                    <td class="fw-bold">@Model.ProductId</td>
                                                </tr>
                                                <tr>
                                                    <td class="text-muted">
                                                        <i class="fas fa-tag"></i> Tên sản phẩm
                                                    </td>
                                                    <td class="fw-bold">@Model.ProductName</td>
                                                </tr>
                                                <tr>
                                                    <td class="text-muted">
                                                        <i class="fas fa-list"></i> Danh mục
                                                    </td>
                                                    <td>
                                                        @if (Model.Category != null)
                                                        {
                                                            <span class="badge @(Model.Category.IsActive ? "bg-primary" : "bg-secondary")">
                                                                @Model.Category.CategoryName
                                                            </span>
                                                            @if (Model.Category.Department != null)
                                                            {
                                                                <br />
                                                                <small class="badge @(Model.Category.Department.IsActive ? "bg-info" : "bg-secondary") mt-1">
                                                                    <i class="fas fa-building"></i> @Model.Category.Department.DepartmentName
                                                                </small>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Chưa phân loại</span>
                                                        }
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="text-muted">
                                                        <i class="fas fa-dollar-sign"></i> Giá bán
                                                    </td>
                                                    <td class="text-success fw-bold">
                                                        $@(Model.ProductPrice?.ToString("N2") ?? "0.00")
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="text-muted">
                                                        <i class="fas fa-coins"></i> Giá vốn
                                                    </td>
                                                    <td class="text-primary fw-bold">
                                                        $@(Model.Cost?.ToString("N2") ?? "0.00")
                                                    </td>
                                                </tr>
                                                @if (Model.ProfitMarginPercent.HasValue)
                                                {
                                                    <tr>
                                                        <td class="text-muted">
                                                            <i class="fas fa-chart-line"></i> Lợi nhuận
                                                        </td>
                                                        <td>
                                                            @{
                                                                var margin = Model.ProfitMarginPercent.Value;
                                                                var badgeClass = margin > 30 ? "bg-success" : margin > 15 ? "bg-warning text-dark" : "bg-danger";
                                                            }
                                                            <span class="badge @badgeClass">
                                                                @margin.ToString("F2")%
                                                            </span>
                                                        </td>
                                                    </tr>
                                                }
                                                <tr>
                                                    <td class="text-muted">
                                                        <i class="fas fa-toggle-on"></i> Trạng thái
                                                    </td>
                                                    <td>
                                                        @if (Model.IsActive)
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check-circle"></i> Đang hoạt động
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">
                                                                <i class="fas fa-ban"></i> Đã vô hiệu hóa
                                                            </span>
                                                        }
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="text-muted">
                                                        <i class="fas fa-image"></i> Hình ảnh
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(Model.Image))
                                                        {
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check"></i> Có
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">
                                                                <i class="fas fa-times"></i> Chưa có
                                                            </span>
                                                        }
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <!-- Description Section -->
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <div class="card border-0 shadow-sm mb-4">
                                        <div class="card-header bg-light">
                                            <h6 class="mb-0">
                                                <i class="fas fa-align-left text-primary"></i> Mô Tả Sản Phẩm
                                            </h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="description-content ql-snow">
                                                <div class="ql-editor" style="padding: 0; white-space: normal;">
                                                    @Html.Raw(Model.Description)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2">
                                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning btn-lg">
                                        <i class="fas fa-edit"></i> Chỉnh Sửa Sản Phẩm
                                    </a>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <a asp-action="Index" class="btn btn-secondary btn-lg w-100">
                                                <i class="fas fa-arrow-left"></i> Quay Lại
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger btn-lg w-100">
                                                <i class="fas fa-ban"></i> Vô hiệu hóa
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-dark">
            <div class="modal-header border-0">
                <h5 class="modal-title text-white">
                    <i class="fas fa-image"></i> @Model.ProductName
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-0">
                <img id="modalImage" src="" alt="" class="img-fluid w-100" style="object-fit: contain; max-height: 80vh;">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script>
        function openImageModal(imageSrc) {
            document.getElementById('modalImage').src = imageSrc;
            const modal = new bootstrap.Modal(document.getElementById('imageModal'));
            modal.show();
        }
    </script>

    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }

        .breadcrumb {
            background-color: #f8f9fa;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
        }

        .image-container img {
            transition: transform 0.3s ease;
        }

        .image-container:hover img {
            transform: scale(1.05);
        }

        .bg-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .table td {
            padding: 0.75rem 0;
        }

        .description-content {
            line-height: 1.8;
        }

            .description-content h1 {
                font-size: 1.75rem;
                margin-top: 1rem;
                margin-bottom: 0.5rem;
            }

            .description-content h2 {
                font-size: 1.5rem;
                margin-top: 1rem;
                margin-bottom: 0.5rem;
            }

            .description-content h3 {
                font-size: 1.25rem;
                margin-top: 1rem;
                margin-bottom: 0.5rem;
            }

            .description-content ul, .description-content ol {
                margin-left: 1.5rem;
                margin-bottom: 1rem;
            }

            .description-content p {
                margin-bottom: 0.75rem;
            }

        @@media (max-width: 768px) {
            .sticky-top {
                position: relative !important;
            }
        }
    </style>
}
