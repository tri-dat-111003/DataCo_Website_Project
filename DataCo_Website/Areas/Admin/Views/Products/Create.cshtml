@model DataCo_Website.Models.Product
@{
    ViewData["Title"] = "Tạo Sản Phẩm Mới";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách sản phẩm</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Tạo mới</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-box"></i> Thông Tin Sản Phẩm</h5>
                </div>
                <div class="card-body p-4">
                    <form id="createForm" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-7">
                                <!-- Product Name -->
                                <div class="mb-4">
                                    <label asp-for="ProductName" class="form-label fw-bold">
                                        <i class="fas fa-tag"></i> Tên Sản Phẩm <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="ProductName" class="form-control form-control-lg" placeholder="Nhập tên sản phẩm..." />
                                    <span asp-validation-for="ProductName" class="text-danger small"></span>
                                </div>

                                <!-- Category -->
                                <div class="mb-4">
                                    <label asp-for="CategoryId" class="form-label fw-bold">
                                        <i class="fas fa-list"></i> Danh Mục <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="ViewBag.CategoryId">
                                        <option value="">-- Chọn danh mục --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                    <small class="form-text text-muted">
                                        <i class="fas fa-info-circle"></i> Chỉ hiển thị danh mục đang hoạt động
                                    </small>
                                </div>

                                <!-- Product Price -->
                                <div class="mb-4">
                                    <label asp-for="ProductPrice" class="form-label fw-bold">
                                        <i class="fas fa-dollar-sign"></i> Giá Bán <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="ProductPrice" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                    </div>
                                    <span asp-validation-for="ProductPrice" class="text-danger small"></span>
                                </div>

                                <!-- Cost Price -->
                                <div class="mb-4">
                                    <label asp-for="Cost" class="form-label fw-bold">
                                        <i class="fas fa-coins"></i> Giá Vốn
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Cost" type="number" step="0.01" class="form-control" placeholder="Để trống = 50% giá bán" />
                                    </div>
                                    <span asp-validation-for="Cost" class="text-danger small"></span>
                                    <small class="text-muted d-block mt-1">
                                        <i class="fas fa-info-circle"></i> Nếu để trống, hệ thống tự set = 50% giá bán
                                    </small>
                                </div>

                                <!-- Description with Rich Text Editor -->
                                <div class="mb-4">
                                    <label asp-for="Description" class="form-label fw-bold">
                                        <i class="fas fa-align-left"></i> Mô Tả Sản Phẩm
                                    </label>
                                    <div id="editor" style="min-height: 200px; border: 1px solid #dee2e6; border-radius: 0.375rem;"></div>
                                    <textarea name="Description" id="descriptionInput" style="display: none;"></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                    <small class="text-muted d-block mt-1">
                                        <i class="fas fa-info-circle"></i> Sử dụng thanh công cụ để format văn bản (tùy chọn)
                                    </small>
                                </div>
                            </div>

                            <!-- Right Column: Image Upload -->
                            <div class="col-md-5">
                                <div class="mb-4">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-image"></i> Hình Ảnh Sản Phẩm
                                    </label>
                                    <div class="input-group">
                                        <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" onchange="previewImage(event)">
                                        <label class="input-group-text bg-primary text-white" for="imageFile">
                                            <i class="fas fa-upload"></i> Chọn
                                        </label>
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle"></i> Chấp nhận: JPG, PNG, GIF (Tối đa 5MB)
                                    </small>

                                    <!-- Image Preview -->
                                    <div id="imagePreview" class="mt-3" style="display: none;">
                                        <div class="card border-success border-2">
                                            <div class="card-header bg-success text-white py-2">
                                                <small><i class="fas fa-check-circle"></i> Preview hình ảnh</small>
                                            </div>
                                            <div class="card-body text-center p-3">
                                                <img id="preview" src="#" alt="Preview" class="img-fluid rounded shadow" style="max-height: 300px; object-fit: contain;">
                                                <button type="button" class="btn btn-sm btn-danger mt-2" onclick="clearImage()">
                                                    <i class="fas fa-times"></i> Xóa ảnh
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <hr class="my-4">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Tạo Sản Phẩm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Quill Editor -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <script>
        // Initialize Quill editor
        var quill = new Quill('#editor', {
            theme: 'snow',
            modules: {
                toolbar: [
                    [{ 'header': [1, 2, 3, false] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    [{ 'color': [] }, { 'background': [] }],
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    [{ 'align': [] }],
                    ['link'],
                    ['clean']
                ]
            },
            placeholder: 'Nhập mô tả sản phẩm...'
        });

        // Update hidden textarea when form submits
        document.getElementById('createForm').onsubmit = function() {
            var descriptionTextarea = document.getElementById('descriptionInput');

            if (quill.getText().trim().length === 0) {
                descriptionTextarea.value = '';
            } else {
                descriptionTextarea.value = quill.root.innerHTML;
            }
            return true;
        };

        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                if (file.size > 5 * 1024 * 1024) {
                    alert('⚠️ Kích thước file quá lớn! Vui lòng chọn file nhỏ hơn 5MB.');
                    event.target.value = '';
                    return;
                }

                const validTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/jpg'];
                if (!validTypes.includes(file.type)) {
                    alert('⚠️ Định dạng file không hợp lệ! Chỉ chấp nhận JPG, PNG, GIF.');
                    event.target.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview').src = e.target.result;
                    document.getElementById('imagePreview').style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        }

        function clearImage() {
            document.getElementById('imageFile').value = '';
            document.getElementById('imagePreview').style.display = 'none';
            document.getElementById('preview').src = '#';
        }
    </script>

    <style>
        .card {
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .breadcrumb {
            background-color: #f8f9fa;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
        }

        .ql-editor {
            min-height: 200px;
        }

        #imagePreview {
            animation: slideDown 0.3s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
